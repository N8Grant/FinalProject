<AnchorPane prefHeight="200.0" prefWidth="400.0" styleClass="background" stylesheets="@JMetroDarkTheme.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.controller.BusManageController">
   <children>
      <Text fill="#7b61ee" layoutX="128.0" layoutY="26.0" strokeType="OUTSIDE" strokeWidth="0.0" text="What do you want to view?">
         <font>
            <Font size="12.0" />
         </font>
      </Text>
      <RadioButton fx:id="bussesOut" layoutX="61.0" layoutY="51.0" mnemonicParsing="false" prefHeight="22.0" prefWidth="152.0" text="Bus Schedule" AnchorPane.leftAnchor="61.0" AnchorPane.rightAnchor="187.0">
